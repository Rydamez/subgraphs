{
  "name": "@enzymeprotocol/subgraphs",
  "private": true,
  "workspaces": [
    "subgraphs/*",
    "utils",
    "cli"
  ],
  "preconstruct": {
    "packages": [
      "utils",
      "cli"
    ]
  },
  "scripts": {
    "postinstall": "manypkg check",
    "prepare": "husky install",
    "format": "prettier --write \"{*,**/*}.{ts,js}\"",
    "lint": "prettier --list-different \"{*,**/*}.{ts,js}\"",
    "test": "jest"
  },
  "dependencies": {
    "@changesets/cli": "^2.17.0",
    "@enzymefinance/babel-config": "^1.0.20",
    "@enzymefinance/ethers": "^4.0.5",
    "@enzymefinance/hardhat": "^4.0.5",
    "@enzymefinance/prettier-config": "^1.0.10",
    "@enzymefinance/protocol": "^4.0.5",
    "@manypkg/cli": "^0.19.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.13",
    "dotenv": "^15.0.0",
    "ethers": "^5.6.7",
    "graphql-request": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.3.2",
    "prettier": "^2.5.1"
  },
  "prettier": "@enzymefinance/prettier-config",
  "lint-staged": {
    "*.{ts,js}": "prettier --write"
  },
  "jest": {
    "preset": "@enzymefinance/hardhat",
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    },
    "globals": {
      "ts-jest": {
        "babelConfig": true,
        "diagnostics": false
      }
    },
    "testTimeout": 300000,
    "testEnvironment": "node",
    "setupFiles": [
      "dotenv/config"
    ]
  }
}
